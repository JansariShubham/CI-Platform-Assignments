@model List<CIPlatform.entities.ViewModels.SkillsViewModel>
@{

}
<div>
    <div class="border-bottom">
        <div class="head-border pb-3 fs-4">Mission Skills</div>
    </div>
    <div class="d-flex justify-content-between">
        <div class="mt-3">
            <input type="search" placeholder="Search" id="searchInput" class="form-control">
        </div>

        <div class="mt-3">
            <a class="btn border rounded-pill px-sm-3 py-sm-2 px-1 orange-btn" id="addSkillBtn"
               style="border-color: #F88634 !important">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#F88634"
                     class="bi bi-plus-lg" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
                </svg> Add
            </a>
        </div>
    </div>
    <div class="table-responsive mt-3">
        <table class="table">
            <thead>
                <tr class="cms-table">
                    <th class="col-10">Title</th>
                    
                    <th class= "col-2">Action</th>



                </tr>
            </thead>
            <tbody class="">

                @foreach (var skill in Model)
                {

                    <tr class="text-secondary font-size">

                        <td>
                            @skill.SkillName
                        </td>
                       
                        <td class="">
                            <div class="d-flex gap-3">
                                <img src="~/images/editing.png" alt="" data-skillid= "@skill.SkillId" class="edit-skill">
                                @if (skill.Status)
                                {
                                    <img src="~/images/bin.png" alt="" data-skillid="@skill.SkillId" class="delete-skill" data-status="@skill.Status">
                                }
                                else
                                {
                                    <img src="~/images/restore.svg" id="restoreImg" alt="" data-skillid="@skill.SkillId" class="delete-skill">
                                }
                            </div>

                        </td>
                    </tr>
                }


            </tbody>
        </table>

    </div>
</div>