@{
    var userId = Context.Session.GetString("userId");
    var userName = Context.Session.GetString("userName");
}


<div class="row m-0 gap-5">

    <a class="d-lg-none mt-3 d-inline" id="sidebarBtn">
        <img src="~/images/filter.png" alt="">
    </a>
    <div class="col-lg-2 text-white  d-none d-lg-block" id="sidebar">
        <div class="d-flex justify-content-end mt-3 d-lg-none" id="closeSidebar">
            <img src="~/images/cross.png" alt="">
        </div>
        <div class="mt-5 ms-3">NAVIGATION</div>
        <a class="text-decoration-none text-white d-block mt-3 ps-3" id="userBtn">
            <img src="~/images/user (4).png" alt="" >
            User
        </a>
        <a class=" text-decoration-none d-block mt-5 cms-page text-white" id= "cmsPageBtn">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                 class="bi bi-file-earmark" id="page" viewBox="0 0 16 16">
                <path d="M14 4.5V14a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2h5.5L14 4.5zm-3 0A1.5 1.5 0 0 1 9.5 3V1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V4.5h-2z" />
            </svg>
            CMS
            Page
        </a>
        <a class="text-decoration-none text-white d-block mt-5 ps-3" id="missionBtn">
            <img src="~/images/target (1).png" class="pe-3"
                 alt=""> Mission
        </a>
        <a class="text-decoration-none text-white d-block mt-5 ps-3" id="missionThemeBtn">
            <img src="~/images/themes.png" class="pe-3"
                 alt="">Mission Theme
        </a>
        <a class="text-decoration-none text-white d-block mt-5 ps-3" id="missionSkillBtn">
            <img src="~/images/skills (1).png" class="pe-3"
                 alt="">Mission Skills
        </a>
        <a class="text-decoration-none text-white d-block  mt-5 ps-3" id="missionApplicationBtn">
            <img src="~/images/folder.png" class="pe-3"
                 alt="">Mission Application
        </a>
        <a class="text-decoration-none text-white d-block mt-5 ps-3" id="storyBtn">
            <img src="~/images/tale.png" class="pe-3"
                 alt="">Story
        </a>
        <a class="text-decoration-none text-white d-block mt-5 ps-3" id="bannerBtn">
            <img src="~/images/folded-ribbon.png"
                 class="pe-3" alt="">Banner Management
        </a>
    </div>
    <div class="col-lg-9 col-12 mt-3" id="rightDiv">
        <nav>
            <div class="d-flex justify-content-between">
                <div>

                    Thursday, November 3, 2022, 10:06 AM

                </div>
                <div class="dropdown right-div mb-3">
                    @if (userId != null)
                    {
                        <img class="rounded-circle user-img" src="~/images/user-img.png" alt="#">

                        <button class="dropdown-toggle policy-btn profile-btn d-none d-sm-inline" data-bs-toggle="dropdown"
                            aria-expanded="false" type="button" id="dropdownMenuButton1">


                            <span>@userName</span>
                            <img class="m-1" src="~/images/drop-down.png" alt="#">
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" asp-action="UserEditProfile" asp-controller="Home" asp-route-id="@userId">My Profile</a></li>
                            <li><a class="dropdown-item" asp-action="TimeSheet" asp-controller="Home" asp-route-id="@userId">Volunteering Timesheet</a></li>
                            <li><a class="dropdown-item" asp-action="Logout" asp-controller="Home">Logout</a></li>
                        </ul>

                    }
                    else
                    {
                        <div class="d-inline">
                            <a class="btn btn-outline-danger rounded" asp-action="Login" asp-controller="Home">Login</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
        <div id="adminPartial"></div>

        <div id = "addUserModalPartial"></div>
        <div id="editUserModalPartial"></div>
        


        

    </div>
</div>

@section scripts{
    <script src="~/js/admin.js"></script>

    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

    
}
