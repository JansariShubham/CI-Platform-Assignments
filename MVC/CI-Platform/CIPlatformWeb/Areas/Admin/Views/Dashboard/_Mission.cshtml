@model List<CIPlatform.entities.ViewModels.PlatformLandingViewModel>
<div>
            <div class="border-bottom">
                <div class="head-border pb-3 fs-4">Mission</div>
            </div>
            <div class="d-flex justify-content-between">
                <div class="mt-3">
                    <input type="search" placeholder="Search" id="searchInput" class="form-control p-2">
                </div>

                <div class="mt-3">
                    <a class="btn border rounded-pill px-sm-3 py-sm-2 px-1 orange-btn" id="addTimeBtn"
                        style="border-color: #F88634 !important" 
                        >
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#F88634"
                            class="bi bi-plus-lg" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
                        </svg> Add Time Mission</a>
                </div>

        <div class="mt-3">
            <a class="btn border rounded-pill px-sm-3 py-sm-2 px-1 orange-btn" id="addGoalBtn"
               style="border-color: #F88634 !important">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#F88634"
                     class="bi bi-plus-lg" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
                </svg> Add Goal Mission
            </a>
        </div>
            </div>
            <div class="table-responsive mt-3">
                <table class="table">
                    <thead>
                        <tr class="cms-table">
                            <th>Mission Title</th>
                            <th>Mission Type</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Status</th>
                            <th>Action</th>



                        </tr>
                    </thead>
                    <tbody class="">

                        @foreach(var mission in Model)
                        {
                        <tr class="text-secondary font-size">

                            <td>@mission.Title</td>
                        @if (mission.MissionType)
                        {
                            <td class="">Time</td>
                        }
                        else{
                            <td class="">Goal</td>
                        }
                        <td>@mission.StartDate?.ToString("d")</td>
                            <td>@mission.EndDate?.ToString("d")</td>
                            @if(mission.IsActive){

                            <td class="text-success">Active</td>
                            }
                            else{

                            <td class="text-danger">InActive</td>
                            }
                            <td class="">
                                <div class="d-flex gap-3">
                                     @if (mission.MissionType == true && mission.EndDate < DateTime.Now && mission.Status == true)
                            {
                                <img src="/images/stop-circle.svg"
                                class="cursor-pointer d-inline width-max-conatent me-2" alt="edit"
                                height="20px" width="20px"
                                data-stop="@mission.MissionId">
                            }
                                    <img src="~/images/editing.png" alt="" class ="edit-mission" data-missionid = "@mission.MissionId" data-missiontype = "@mission.MissionType">
                                    
                                    @if(mission.IsActive)
                                    {
                                    <img src="~/images/bin.png" alt="" class="delete-mission" data-status = "@mission.IsActive" data-missionid = "@mission.MissionId">
                                }
                                else
                                {
                                    <img src="~/images/restore.svg" alt="" id="restoreImg" class="delete-mission" data-status="@mission.IsActive" data-missionid="@mission.MissionId">
                                }
                            </div>

                            </td>
                        </tr>

                        }
                    </tbody>
                </table>

            </div>

</div>
<div class="pagination d-flex justify-content-end gap-1 px-3 my-4"></div>