@model List<CIPlatform.entities.ViewModels.UserProfile>
@{
}
<div>
    <div class="border-bottom">
        <div class="head-border pb-3 fs-4">User</div>
    </div>
    <div class="d-flex justify-content-between">
        <div class="mt-3">
           @* <img src="~/images/search.png" class="w-25 h-50 mt-2 ms-2 "/>*@
            <input type="search" placeholder="Search" class="p-2  form-control" id="searchInput">
        </div>

        <div class="mt-3">
            <a class="btn border rounded-pill px-sm-3 py-sm-2 px-1 orange-btn"
               style="border-color: #F88634 !important" id="addUser"
               >
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#F88634"
                     class="bi bi-plus-lg" viewBox="0 0 16 16">
                    <path fill-rule="evenodd"
                          d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2Z" />
                </svg> Add
            </a>
        </div>
    </div>
    <div class="table-responsive mt-3">
        <table class="table">
            <thead>
                <tr class="cms-table">
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Employee Id</th>
                    <th>Department</th>
                    <th>Status</th>
                    <th>Action</th>



                </tr>
            </thead>
            <tbody class="">

                @foreach(var user in Model)
                {

                <tr class="text-secondary font-size">
                   
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.email</td>
                    <td>@user.EmployeeId</td>
                    <td>@user.Department</td>
                    @if(@user.Status == 0)
                    {
                    <td class="text-success">Active</td>
                    }
                    else{
                        <td class="text-danger">In Active</td>
                    }


                    <td class="">
                        <div class="d-flex gap-3">
                                <img src="~/images/editing.png" alt=""data-userid="@user.userId"  class="edit-user">
                                @if (@user.Status == 1)
                                {
                                    <img src="~/images/restore.svg" id="restoreImg" alt="" data-userid="@user.userId" data-status="@user.Status" class="delete-user">

                                }
                                else{
                                    <img src="~/images/bin.png" alt="" data-userid="@user.userId" data-status="@user.Status" class="delete-user">
                                }
                            
                        </div>

                    </td>
                </tr>
                }




            </tbody>
        </table>

    </div>
</div>

<div class="pagination d-flex justify-content-end gap-1 px-3 my-4"></div>