@model CIPlatform.entities.ViewModels.StoryListingViewModel
<!-- navbar  -->
<partial name="_Navbar1" />
<input type = "hidden" value ="@Model.StoryId" id="storyId" />
<input type="hidden" value="@Model.MissionId" id="missionId" />
<section class="border-top mt-3">
    <div class="container mt-5">
        <div class="row row-cols-1 row-cols-lg-2">
            <div class="col">
                <img src="@Model.imageUrl" class="story-vol-img" alt="" style="width: inherit;">
                <div id="carouselExampleControls" class="carousel slide mt-1" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active gap-1 d-flex">
                            <img src="~/images/CSR-initiative-stands-for-Coffee--and-Farmer-Equity.png"
                                 class="w-25 h-25" alt="...">
                            <img src="~/images/CSR-initiative-stands-for-Coffee--and-Farmer-Equity.png"
                                 class="w-25 h-25" alt="...">
                            <img src="~/images/CSR-initiative-stands-for-Coffee--and-Farmer-Equity.png"
                                 class="w-25 h-25" alt="...">
                            <img src="~/images/CSR-initiative-stands-for-Coffee--and-Farmer-Equity.png"
                                 class="w-25 h-25" alt="...">

                        </div>

                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col mt-5 mt-lg-0">
                <div class="d-flex flex-column">
                    <div>
                        <img src="~/images/volunteer1.png" class="rounded-pill volunteer-img" alt="">
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-secondary mt-2">@Model.User.FirstName @Model.User.LastName</span>
                        <div class="border rounded-pill px-2 py-1">
                            <img src="~/images/eye.png" alt="">
                            <span class="text-secondary font-size">@Model.StoryViews Views</span>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <p class="text-secondary">
