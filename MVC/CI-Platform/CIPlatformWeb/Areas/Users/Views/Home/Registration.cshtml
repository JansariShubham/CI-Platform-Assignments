@model CIPlatform.entities.ViewModels.UserViewModel

@{
}
<section class="d-flex flex-column flex-md-column flex-lg-row login-content">
    <partial name="_HeroCarousel" model="@Model.banners"></partial>

    <div class="d-flex flex-column p-3 p-sm-5 justify-content-center right-div">
        <form class="d-flex flex-column mx-auto justify-content-center" asp-action="Registration" method="post">
            <label asp-for="FirstName" class="form-label mb-0 login-label text-light-custom text-secondary">First Name</label>
            <input type="text" asp-for="FirstName" id="FirstName" class="form-control login-input text-light-custom">
            <span asp-validation-for="FirstName" class="text-danger error-span"></span>

            <label for="LastName" asp-for="LastName" class="mt-2 mb-0 form-label text-secondary login-label text-light-custom">
                Last
                Name
            </label>
            <input type="text" asp-for="LastName" id="LastName" class="form-control login-input text-light-custom">
            <span asp-validation-for="LastName" class="text-danger error-span"></span>

            <label for="phone" asp-for="PhoneNumber" class="mt-2 mb-0 form-label text-secondary login-label text-light-custom">
                Phone
                Number
            </label>
            <input type="text" asp-for="PhoneNumber" id="phone" class="form-control login-input text-light-custom">
            <span asp-validation-for="PhoneNumber" class="text-danger error-span"></span>

            <label for="email" asp-for="Email" class="mt-2 mb-0 form-label text-secondary login-label text-light-custom">
                Email
                Address
            </label>
            <input type="email" asp-for="Email" id="email" class="form-control login-input text-light-custom">
            <span asp-validation-for="Email" class="text-danger error-span"></span>

            <label for="psw" asp-for="Password"
                   class="mt-1 mb-0 form-label text-secondary login-label text-light-custom">Password</label>
            <input type="password" id="psw" asp-for="Password" class="form-control login-input text-light-custom">
            <span asp-validation-for="Password" class="text-danger error-span"></span>

            <label asp-for="ConfirmPasword" class="mt-2 mb-0 form-label text-secondary login-label text-light-custom">
                Confirm
                Password
            </label>
            <input type="password" asp-for="ConfirmPasword" id="con-psw" class="form-control login-input text-light-custom">
            <span asp-validation-for="ConfirmPasword" class="text-danger error-span"></span>

            <button type="submit" class="btn mt-2 text-light-custom login-input" id="login-btn">Register</button>
        </form>

        <div class="d-flex flex-column mt-2 align-items-center bottom-div ">
            <a asp-action="ForgotPassword" asp-controller="Home">
                <span class="login-span text-light-custom">
                    Lost
                    your
                    password?
                </span>
            </a>

            <span class="mt-3 login-span text-light-custom">
                Already registerd? <a asp-action="Login" asp-controller="Home">
                    Login
                    now
                </a>
            </span>
            <span class="login-span text-light-custom privacy-text position-lg-fixed">
                Priavcy
                Policy
            </span>
        </div>
    </div>



</section>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"></partial>
    }
}

