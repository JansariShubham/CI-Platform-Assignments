@model CIPlatform.entities.ViewModels.UserLoginViewModel
@{
    ViewData["Title"] = "Home Page";
}


<section class="d-flex flex-column flex-md-column flex-lg-row login-content">
    <partial name="_HeroCarousel" model="@Model.banners"></partial>


    <div class="d-flex flex-column p-5 justify-content-center">

        @if (TempData["statuserror"] != null)
        {
            <div class="bg-danger-subtle text-center p-3 mb-3">

                @TempData["statuserror"]

            </div>
        }
        <form class="d-flex flex-column mx-auto justify-content-center" method="post" asp-action="Login">
            <label asp-for="Email" class="form-label login-label text-light-custom text-secondary">Email Address</label>
            <input type="email" asp-for="Email" id="email" class="form-control login-input text-light-custom"
                   >
                <span asp-validation-for="Email" class="text-danger"></span>

            <label asp-for="Password" class="mt-3 form-label text-secondary login-label text-light-custom">Password</label>
            <input type="password" asp-for="Password" id="psw" class="form-control login-input text-light-custom" >
            <span asp-validation-for="Password" class="text-danger"></span>
            <button type="submit" class="btn mt-4 text-light-custom" id="login-btn">Login</button>
        </form>

        <div class="d-flex flex-column mt-3 align-items-center bottom-div ">
            <a asp-action="ForgotPassword" asp-controller="Home">
                <span class="login-span text-light-custom">
                    Lost
                    your
                    password?
                </span>
            </a>

            <span class="mt-3 login-span text-light-custom">
                Don't have an account? <a asp-action="Registration" asp-controller="Home">
                    Create an
                    account
                </a>
            </span>
            <span class="login-span text-light-custom privacy-text position-lg-fixed">
                Priavcy
                Policy
            </span>
        </div>
    </div>


</section>
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}