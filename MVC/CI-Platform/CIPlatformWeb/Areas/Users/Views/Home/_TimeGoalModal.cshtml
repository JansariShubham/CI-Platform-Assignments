@model CIPlatform.entities.ViewModels.TimeSheetViewModel
@{
    var userId = Context.Session.GetString("userId");
}

<input type="hidden" value="@userId" id="userId" />
<div class="modal" id="timeMissionModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered timesheet-modal">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">Please input below Volunteering Hours</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <label for="mission" class="form-label">Mission</label>
                <select name="" id="mission" class="form-select bg-secondary-subtle  text-secondary">
                    <option value="" selected disabled>Faith Community Fellowship</option>
                    @if (Model.missionList != null)
                    {
                        @foreach (var mission in Model.missionList!)
                        {

                            <option value="@mission.MissionId">@mission.Title</option>

                        }
                    }
                </select>


                <label for="date" class="mt-3 form-label">Date Volunteered</label>
                <input type="date" id="date" class="d-block w-100 text-secondary form-control"
                       placeholder="Select Date">
                <div class="d-flex gap-2">
                    <div class="hour-min-div">
                        <label for="hours" class="mt-3 form-label">Hours</label>
                        <input type="number" for="hours" placeholder="Enter Spent Hours"
                               class="d-block w-100 form-control text-secondary" />
                    </div>
                    <div class="hour-min-div">

                        <label for="minutes" class="form-label mt-3">Minutes</label>
                        <input type="number" id="minutes" placeholder="Enter Spent Minutes"
                               class="d-block w-100  text-secondary form-control" />
                    </div>
                </div>
                <label for="message" class="mt-3">Message</label>
                <textarea name="" id="message" cols="30" rows="5" placeholder="Enter your message"
                          class="d-block w-100 text-secondary form-control"></textarea>
            </div>
            <div class="modal-footer border-0">
                <a class="btn border-secondary rounded-pill px-4 py-2 text-secondary"
                   data-bs-dismiss="modal">Cancle</a>
                <button class="btn border rounded-pill px-4 py-2 orange-btn"
                        style="border-color: #F88634 !important">
                    Submit
                </button>
            </div>
        </div>
    </div>
</div>

<!-- goal mission modal -->
<div class="modal" id="goalMissionModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered timesheet-modal">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">Please input below Volunteering Goal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <label for="mission" class="form-label">Mission</label>
                <select name="" id="mission" class="form-select bg-secondary-subtle  text-secondary">
                    <option value="" selected disabled>Plantation and Afforestation Programme</option>
                    @if (Model.missionList != null)
                    {
                        @foreach (var mission in Model.missionList!)
                        {

                            <option value="@mission.MissionId">@mission.Title</option>

                        }
                    }
                </select>


                <label for="action" class="mt-3 form-label">Action</label>
                <input type="text" id="action"
                       class="d-block w-100 text-secondary border-secondary-subtle form-control"
                       placeholder="Enter Actions">

                <label for="date" class="mt-3 form-label">Date Volunteered</label>
                <input type="date" id="date"
                       class="d-block w-100 text-secondary border-secondary-subtle form-control"
                       placeholder="Select Date">
                <label for="message" class="mt-3 form-label">Message</label>
                <textarea name="" id="message" cols="30" rows="5" placeholder="Enter your message"
                          class="d-block w-100 text-secondary border-secondary-subtle form-control"></textarea>
            </div>
            <div class="modal-footer border-0">
                <a class="btn border-secondary rounded-pill px-4 py-2 text-secondary"
                   data-bs-dismiss="modal">Cancle</a>
                <button class="btn border rounded-pill px-4 py-2 orange-btn"
                        style="border-color: #F88634 !important">
                    Submit
                </button>
            </div>
        </div>
    </div>
</div>

<script src ="~/js/timesheet.js"></script>